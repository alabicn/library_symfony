{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello  ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'C:/wamp/www/library/src/Controller/BookController.php'|file_link(0) }}">src/Controller/BookController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'C:/wamp/www/library/templates/book/index.html.twig'|file_link(0) }}">templates/book/index.html.twig</a></code></li>
    </ul>
</div>
<div>
    <h1>{{ book.author.name ~ " " ~ book.author.surname|upper}}</h1>
    <h3>{{ book.title }}</h3>
    <img src="/assets/img/{{ book.srcImage }}" alt="{{ book.altImage }}" title="{{ book.titleImage }}" />
    
    <h1>{% for e in book.editions %}
        {{ e.name }} : {{ book.price[e.id]|number_format(2, '.', ' ') }} €<br/>
    {% endfor %}
    </h1>

        


   <div class="example-wrapper">

    
    {% if app.user %}

    {{ form_start(evaluationForm) }}
    {{ form_row(evaluationForm.rating, {'attr': {'placeholder': 'Your rating?'}}) }}
    {{ form_row(evaluationForm.comment, {'attr': {'placeholder': 'Your comment...'}}) }}
    {{ form_end(evaluationForm) }}

    {% else %}

    <a href ="{{path('login')}}">To see what others thought of this book, please sign up.</a>

    {% endif %}

    <h2>{{ book.evaluations | length }} messages</h2>
    


    <p>
    Average rating : {{ book.average }}/5
        
    </p>
        

        {% for evaluation in book.evaluations %}

            <ul>
                <li><strong>{{ evaluation.comment}}<br></strong>
                <span>{{ evaluation.users.uname }} answered : {{ evaluation.dateEvaluation|date("F jS\\, Y \\a\\t G:i\\h") }}</span>
                <span>{{ evaluation.users.uname }} rated : {{ evaluation.rating }}/5 favorite: {{ evaluation.favorite }}</span></li>

            </ul>
        {% endfor %}
</div>
   
   
   

    
</div>

{% endblock %}
