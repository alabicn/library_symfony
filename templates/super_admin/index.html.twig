{% for user in users %}

    <h5><a href={{ path("show_user", {'id': user.id}) }}>{{ user.uname ~ ' email : ' ~ user.email }}</a></h5>
    <span>
        {% for role in user.roles %}
        {% if role == 'ROLE_USER' %}
        <a href={{ path("make_admin", {'id': user.id}) }}>Make Admin?</a>
        {% elseif role == 'ROLE_SUPER_ADMIN' %}
        <h1>You are SUPER ADMIN</h1>
        {% else %}
        <a href={{ path("remove_admin", {'id': user.id}) }}>Remove Admin?</a>
        {% endif %}
        {% endfor %}
    </span><br>

{% endfor %}


