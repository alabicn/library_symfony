{% extends 'base.html.twig' %}
{% block title %}
{{title}}
{% endblock %}

{% block body %}
    {% if title is defined %}
        <h1 class="page__title">{{title}}</h1>
    {% else %}
        <h1>Header</h1>
    {% endif %}
    <ol class="number__list">
    {% for author in authors %}
        <li><a href={{ path("edit_author", {'surname': author.surname} ) }} class="links">{{author.name ~ " " ~ author.surname|upper}}</a></li>
    {% endfor %}
    </ol>
{% endblock %}