{% extends 'base.html.twig' %}
{% block title %}
{{title}}
{% endblock %}
{% block body %}
{% if title is defined %}
        <h1 class="page__title">{{title}}</h1>
    {% else %}
        <h1>Header</h1>
    {% endif %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
        <h1>Hello âœ…</h1>
        This friendly message is coming from:
        <ul>
            <li>Your controller at
                <code>
                    <a href="{{ 'C:/wamp/www/library/src/Controller/HomepageController.php'|file_link(0) }}">src/Controller/HomepageController.php</a>
                </code>
            </li>
            <li>Your template at
                <code>
                    <a href="{{ 'C:/wamp/www/library/templates/homepage/index.html.twig'|file_link(0) }}">templates/homepage/index.html.twig</a>
                </code>
            </li>
        </ul>
        <a href={{ path("add_author") }}>Add Author</a><br>
        <a href={{ path("add_book") }}>Add Book</a><br>
        <a href={{ path("add_genre") }}>Add Genre</a><br>
        <a href={{ path("add_edition") }}>Add Edition</a><br>
        <a href={{ path("add_quote") }}>Add Quote</a><br>

        <hr>

        {% for author in author %}

        <a href={{ path("edit_author", {'surname': author.surname} ) }}>
            <p>
                {{author.name ~ " " ~ author.surname|upper}}</p>
        </a>
        {% endfor %}
<hr>
<h2>GENRES : </h2>
        {% for genre in genres %}
            <a href={{ path("show_genre", {'name': genre.name}) }}><h4>{{genre.name}}</h4></a>
        {% endfor %}
<h2>Quotes</h2>
        {% for quote in quotes %}
    <div>
        <img src="/assets/img/{{ quote.author.srcImage }}" alt="{{ quote.author.altImage }}" title="{{ quote.author.titleImage }}" width="50px"/>
        <span>"{{ quote.text }}"</span><br>
        <span> ~ {{ quote.author.name ~ " " ~ quote.author.surname|upper }}</span><br>
        {% if is_granted('ROLE_ADMIN') %}
        <span>
            <a href={{ path("edit_quote", {'id': quote.id}) }}>Edit?</a>
            <a href={{ path("remove_quote", {'id' : quote.id}) }} onclick="return confirm('Are you sure?')">Delete?</a>
        </span>
    </div>
    {% endif %}
    {% endfor %}
    {% endblock %}
