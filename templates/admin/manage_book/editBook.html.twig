{% extends 'base.html.twig' %}
{% block title %}
{{title}}
{% endblock %}
{% block body %}
    {% if title is defined %}
        <h1 class="page__title">{{title}}</h1>
    {% else %}
        <h1>Header</h1>
    {% endif %}
    <div class="settings">
        <div>
            <img id="admin__edit__book-img" src="/assets/img/{{ book.srcImage }}" alt="{{ book.altImage }}" title="{{ book.titleImage }}"/>   
            <a href={{ path("edit_book_image", {'id': book.id}) }} class="links">Change photo?</a>
        </div>
        <div class="settings__info">
            {{ book.details|raw }}
            
            <p>{% for edition in book.editions %}
                <span>{{ edition.name }}, </span>
                {% endfor %}  
                {{ book.publisher }} | 
                {{ book.pages ~ " pages" }}
            </p>
        </div>
    </div>
    <div class="admin__edit-buttons">
        <button class="show btn btn-primary">Edit details?</button>
        <button class="hide btn btn-primary">Hide edit form?</button>
    </div>  
    {% for e in book.editions %}
        {{ e.name }}
        :
        {{ book.prices[e.id]|number_format(2, '.', ' ') }}
        â‚¬<br/>
    {% endfor %}
    <div class="admin__edit-form">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    </div>
    {% block javascripts %}
    {{ parent() }}
    <script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=ouo09defrlak006xogcmlytgdrzl1yubfduz4p4v24xr50pi"></script>
    <script src="{{ asset('assets/js/tiny.js') }}" type="text/javascript"></script>
    {% endblock %}
{% endblock %}