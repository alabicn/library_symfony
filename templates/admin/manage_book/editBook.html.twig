{% extends 'base.html.twig' %}
{% block title %}
{{title}}
{% endblock %}
{% block body %}

{% if title is defined %}
        <h1 class="page__title">{{title}}</h1>
    {% else %}
        <h1>Header</h1>
    {% endif %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
        <h1>Hello ✅</h1>
        This friendly message is coming from:
        <ul>
            <li>Your controller at
                <code>
                    <a href="{{ 'C:/wamp/www/library/src/Controller/BookController.php'|file_link(0) }}">src/Controller/BookController.php</a>
                </code>
            </li>
            <li>Your template at
                <code>
                    <a href="{{ 'C:/wamp/www/library/templates/book/index.html.twig'|file_link(0) }}">templates/book/index.html.twig</a>
                </code>
            </li>
        </ul>
    </div>
    <div>
        <h1>
            {{ book.author.name ~ " " ~ book.author.surname|upper}}</h1>
        <h3>
            {{ book.title }}</h3>
        <img src="/assets/img/{{ book.srcImage }}" alt="{{ book.altImage }}" title="{{ book.titleImage }}" style="width : 100px;"/>
        <a href={{ path("edit_book_image", {'id': book.id} ) }}>Change photo?</a>
        <h1>
            {% for e in book.editions %}
                {{ e.name }}
                :
                {{ book.prices[e.id]|number_format(2, '.', ' ') }}
                €<br/>
            {% endfor %}
        </h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    {% endblock %}
