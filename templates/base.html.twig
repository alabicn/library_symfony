                </div>
            </section>
        </footer> 
        {% block javascripts %}
        <!--jQuery-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!--scripts for jQuery ratings-->
        <script src="{{ asset('assets/js/jquery.barrating.min.js') }}"></script>
        <script src="{{ asset('assets/js/ratings.js') }}" type="text/javascript"></script>
        <!--script for show/hide buttons-->
        <script src="{{ asset('assets/js/show_hide.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>               
                
                
             