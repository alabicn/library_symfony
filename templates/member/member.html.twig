{% extends 'base.html.twig' %}

{% block title %}
{{title}}
{% endblock %}

{% block body %}
    {% if title is defined %}
        <h1 class="page__title">{{title}}</h1>
    {% else %}
        <h1>Header</h1>
    {% endif %}

    <div id="settings">
        <div id="member__photo-details">
            <img id="member-img" src="/assets/img/{{ app.user.srcPhoto }}" alt="{{ app.user.altPhoto }}" title="{{ app.user.titlePhoto }}"/>
            <div>
                {{ form(form, {'attr': {'id': 'photo_upload-form'}}) }}
            </div>
            <p class="reset_password">
                <a href={{ path('password_update') }}>Change Password?</a>
            </p>
        </div>
        <div id="member">
            <div id="member_name">
                <h2><span>{{app.user.uname}}</span> <span>{{ app.user.email }}</span></h2>
            </div>
            <div id="member_info">
                <p>Gender : {{app.user.gender}}</p>
                <p>Age : {{app.user.birthdate | age}}</p>
                <p>Member since : {{ app.user.registrationDate | date("F Y") }}</p>
            </div>
        </div>
    </div>

{% endblock %}
